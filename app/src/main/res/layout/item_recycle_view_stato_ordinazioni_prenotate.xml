<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="350dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewLayoutItemStatoOrdinazione"
        android:layout_width="313dp"
        android:layout_height="330dp"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewNomePiattoRecycleViewStatoOrdinazioniPrenotate"
                android:layout_width="266dp"
                android:layout_height="92dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="22dp"
                android:text="Nome Piatto"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNotaRecycleViewStatoOrdinazioniPrenotate"
                android:layout_width="215dp"
                android:layout_height="91dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="9dp"
                android:text="@string/breve_nota"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomePiattoRecycleViewStatoOrdinazioniPrenotate" />

            <TextView
                android:id="@+id/textViewSalaRecycleViewOrdinazioniPrenotate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="70dp"
                android:text="4"
                android:textAlignment="viewEnd"
                android:textColor="@color/my_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView13" />

            <TextView
                android:id="@+id/textViewTavoloRecycleViewOrdinazioniPrenotate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="17dp"
                android:text="3"
                android:textAlignment="viewEnd"
                android:textColor="@color/my_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textViewSalaRecycleViewOrdinazioniPrenotate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView14" />

            <TextView
                android:id="@+id/textViewTempoRecycleViewOrdinazioniPrenotate"
                android:layout_width="98dp"
                android:layout_height="46dp"
                android:layout_marginStart="107dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="20dp"
                android:text="tempo"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonAvantiRecycleViewOrdinazioniPrenotate"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="17dp"
                android:text="S"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewNotaRecycleViewStatoOrdinazioniPrenotate"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="8dp"
                android:text="@string/t"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewNotaRecycleViewStatoOrdinazioniPrenotate"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomePiattoRecycleViewStatoOrdinazioniPrenotate" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="313dp"
                android:layout_height="5dp"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LabelNumeroOrdinazionePrenotata"
                app:srcCompat="@drawable/line_1" />

            <ImageButton
                android:id="@+id/buttonAvantiRecycleViewOrdinazioniPrenotate"
                android:layout_width="66dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="30dp"
                android:background="#00FFFFFF"
                android:src="@drawable/button_avanti"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/LabelNumeroOrdinazionePrenotata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/ordinazione_numero"
                android:textColor="#FF9800"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNotaRecycleViewStatoOrdinazioniPrenotate" />

            <TextView
                android:id="@+id/numeroOrdinazionePrenotata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="76dp"
                android:text="10"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/LabelNumeroOrdinazionePrenotata"
                app:layout_constraintTop_toBottomOf="@+id/textViewNotaRecycleViewStatoOrdinazioniPrenotate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>