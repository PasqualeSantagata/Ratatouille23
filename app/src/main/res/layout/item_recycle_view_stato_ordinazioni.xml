<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="313dp"
        android:layout_height="282dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewNumeroPiattiRecycleViewStatoOrdinazioni"
            app:layout_constraintTop_toBottomOf="@+id/textViewNumeroPiattiRecycleViewStatoOrdinazioni">

            <TextView
                android:id="@+id/textViewNotaRecycleViewStatoOrdinazioni"
                android:layout_width="215dp"
                android:layout_height="91dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="9dp"
                android:text="@string/breve_nota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomePiattoRecycleViewStatoOrdinazioni" />

            <TextView
                android:id="@+id/textViewNomePiattoRecycleViewStatoOrdinazioni"
                android:layout_width="266dp"
                android:layout_height="55dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="22dp"
                android:text="Nome Piatto"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="313dp"
                android:layout_height="5dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/line_1"
                tools:layout_editor_absoluteY="183dp" />

            <TextView
                android:id="@+id/textViewTempoRecycleViewStatoOrdinazioni"
                android:layout_width="98dp"
                android:layout_height="46dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="tempo"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonAvantiRecycleViewStatoOrdinazioni"
                app:layout_constraintStart_toEndOf="@+id/buttonIndietroRecycleViewStatoOrdinazioni" />

            <ImageButton
                android:id="@+id/buttonAvantiRecycleViewStatoOrdinazioni"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/button_avanti"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/buttonIndietroRecycleViewStatoOrdinazioni"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/button_indietro"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="17dp"
                android:text="S"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewNotaRecycleViewStatoOrdinazioni"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="8dp"
                android:text="T"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewNotaRecycleViewStatoOrdinazioni"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomePiattoRecycleViewStatoOrdinazioni" />

            <TextView
                android:id="@+id/textViewSalaRecycleViewStatoOrdinazioni"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="43dp"
                android:text="10"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6" />

            <TextView
                android:id="@+id/textViewTavoloRecycleViewStatoOrdinazioni"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="17dp"
                android:text="3"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewSalaRecycleViewStatoOrdinazioni"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>