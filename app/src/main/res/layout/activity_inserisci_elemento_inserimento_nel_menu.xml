<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_food_icons"
    tools:context=".view.inserimentoNelMenu.InserisciElementoActivity">

    <Button
        android:id="@+id/buttonInserElemOk"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/my_green"
        android:text="@android:string/ok"
        android:textColor="@android:color/white"

        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonInserElemIndietro"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/my_green"
        android:text="@string/indietro"
        android:textColor="@android:color/white"
        app:cornerRadius="@android:dimen/app_icon_size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayoutNomeInserisciElementoMenu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="430dp"
        android:layout_height="52dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="800dp"
        android:hint="    Nome"
        app:boxStrokeColor="@color/my_green"
        app:hintTextColor="@color/my_green"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <AutoCompleteTextView
            android:id="@+id/TextInputEditTextNomeInserisciElementoMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/desing_rounded_green_tf"
            android:shadowColor="#4CAF50"
            android:singleLine="true"

            />
        <!-- <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/TextInputEditTextNomeInserisciElementoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#4CAF50"
            android:singleLine="true"
            />-->
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayoutPrezzoInserisciElementoMenu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="800dp"
        android:hint="@string/prezzo"
        app:boxStrokeColor="@color/my_green"
        app:hintTextColor="@color/my_green"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutNomeInserisciElementoMenu"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextInputEditTextPrezzoInserisciElementoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/desing_rounded_green_tf"
            android:inputType="numberDecimal"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayoutAllergeniInserisciElementoMenu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="800dp"
        android:hint="@string/allergeni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutPrezzoInserisciElementoMenu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextInputTextFieldAllergeniInserisciElementoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/desing_rounded_green_tf"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayoutDescrizioneInserisciElementoMenu"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="800dp"
        android:hint="@string/descrizione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutAllergeniInserisciElementoMenu"

        app:boxStrokeColor="@color/my_green"
        app:hintTextColor="@color/my_green"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/TextInputTextFieldDescrizioneInserisciElementoMenu"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:singleLine="false"
            android:textAlignment="viewStart"
            android:textColorLink="#4CAF50"
            android:inputType="textMultiLine"
            android:maxLines="@integer/material_motion_duration_long_1"
            android:background="@drawable/desing_rounded_green_tf"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="136dp"
        android:layout_height="475dp"
        android:layout_marginEnd="332dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456">

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>