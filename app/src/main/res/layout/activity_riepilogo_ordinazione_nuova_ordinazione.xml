<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_food_icons"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="1283dp"
        android:layout_height="1380dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPrimi"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/title_primi" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewPrimi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/imageViewSecondi"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/title_second" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewSecondi"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/imageViewBevande"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/title_bevande" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewBevande"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageViewSushi"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/title_sushi" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewSushi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageViewPizza"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/title_pizze" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewPizza"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageViewDessert"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/title_dessert" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewDessert"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="1290dp"
        android:layout_height="8dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonIndietroRiepilogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/line_visualizz_categ" />

    <Button
        android:id="@+id/buttonIndietroRiepilogo"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="50dp"
        android:text="@string/indietro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonOkRiepilogo"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>