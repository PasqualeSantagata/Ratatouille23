<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_food_icons"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="18dp">

    <Button
        android:id="@+id/buttonOkNuovoElemento"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:text="@android:string/ok"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonIndietroNuovoElemento"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="50dp"
        android:text="@string/indietro"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerLinguaHomeInserimentoNelMenu"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginStart="390dp"
        android:layout_marginEnd="376dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/design_item_spinner"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCategoriaHomeInserimentoNelMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerCategoriaHomeInserimentoNelMenu"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginStart="390dp"
        android:layout_marginBottom="312dp"
        android:background="@drawable/design_item_spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAggiungiCategoriaNuovoElementoGestioneMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="300dp"
        android:clickable="true"
        app:backgroundTint="@color/my_green"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerCategoriaHomeInserimentoNelMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLinguaHomeInserimentoNelMenu"
        app:layout_constraintVertical_bias="0.98"
        app:srcCompat="@drawable/ic_add_fab"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>