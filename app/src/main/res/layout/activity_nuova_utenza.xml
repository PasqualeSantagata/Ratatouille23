<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_food_icons">

    <Button
        android:id="@+id/buttonIndietroNuovaUtenza"
        android:layout_width="180dp"
        android:layout_height="60dp"

        android:layout_marginStart="200dp"
        android:layout_marginBottom="80dp"
        android:text="@string/indietro"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNomeCreaUtenza"
        android:layout_width="600dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="329dp"

        android:layout_marginTop="70dp"
        android:layout_marginEnd="351dp"
        android:hint="@string/nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewInserisciDati">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCognomeCreaUtenza"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="329dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="351dp"
        android:hint="@string/cognome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNomeCreaUtenza">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmailCreaUtenza"
        android:layout_width="600dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="329dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="351dp"
        android:hint="@string/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCognomeCreaUtenza">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonOkCreaUtenza"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="200dp"

        android:layout_marginBottom="80dp"
        android:text="@android:string/ok"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerTipoUtenzaCreaUtenza"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_marginStart="329dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="351dp"
        android:background="@drawable/design_item_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPasswordCreaUtenza" />

    <ImageView
        android:id="@+id/imageViewInserisciDati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="342dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rect_con_scritta" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPasswordCreaUtenza"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="329dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="351dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmailCreaUtenza"
        android:hint="@string/password"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
             />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>