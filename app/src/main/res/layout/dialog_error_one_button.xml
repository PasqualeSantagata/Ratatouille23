<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="801dp"
        android:layout_height="444dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="440dp">

            <TextView
                android:id="@+id/textViewAttenzioneDialogueErrorOneBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attenzione"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textViewMessageDialogueErrorOneBt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/buttonOkDialogueErrorOneBt"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="@android:string/ok"
                app:cornerRadius="@android:dimen/app_icon_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textViewMessageDialogueErrorOneBt"
                app:layout_constraintStart_toStartOf="@+id/textViewMessageDialogueErrorOneBt"
                app:layout_constraintTop_toBottomOf="@+id/textViewMessageDialogueErrorOneBt"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/textViewMessageDialogueErrorOneBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errore"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonOkDialogueErrorOneBt"
                app:layout_constraintEnd_toEndOf="@+id/textViewAttenzioneDialogueErrorOneBt"
                app:layout_constraintStart_toStartOf="@+id/textViewAttenzioneDialogueErrorOneBt"
                app:layout_constraintTop_toBottomOf="@+id/textViewAttenzioneDialogueErrorOneBt"
                app:layout_constraintVertical_bias="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>