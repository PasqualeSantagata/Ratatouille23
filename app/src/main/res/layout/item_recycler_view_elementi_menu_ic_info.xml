<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="210dp">

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="195dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:cardBackgroundColor="@color/my_green"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="71dp">

            <ImageView
                android:id="@+id/ic_tempo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomeInfo"
                app:srcCompat="@drawable/ic_tempo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="433dp"
                android:layout_height="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/image_simple_elem_menu_recycle_view" />

            <ImageView
                android:id="@+id/ic_quantit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@+id/textViewTempoPreparazioneInfo"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomeInfo"
                app:srcCompat="@drawable/ic_quantita" />

            <ImageView
                android:id="@+id/InfoElementoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="325dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/textViewQuantitaInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="120dp"
                android:layout_marginBottom="6dp"
                android:inputType="numberDecimal"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_quantit"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomeInfo"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textViewNomeInfo"
                android:layout_width="354dp"
                android:layout_height="82dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="21dp"
                android:fontFamily="@font/roboto"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTempoPreparazioneInfo"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@+id/ic_tempo_info"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomeInfo"
                tools:ignore="TouchTargetSizeCheck"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
